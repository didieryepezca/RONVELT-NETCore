@model Ronvelt.Models.Entities.Obra

@{
    ViewData["Title"] = "obra_Editar";
}



<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
                Actualizar Obra
            </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">

            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i>Ronvel</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0);">Obras</a></li>
                <li class="breadcrumb-item active">Actualizar Obra</li>
            </ul>
        </div>
    </div>
</div>

<form asp-action="obra_Editar">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>Informacion</strong> Basica <small> Ingrese informacion relevante de la Obra...</small> </h2>

                    </div>
                    <div class="body">

                        <div class="row clearfix">

                            <div class="col-lg-3 col-md-12" hidden>
                                <div class="form-group">

                                    <input asp-for="Codigo" class="form-control" />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-lg-6 col-md-12">
                                <div class="form-group">

                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre de la Obra" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-6 col-md-12">
                                <div class="form-group">

                                    <input asp-for="Ubicacion" class="form-control" placeholder="Ubicacion de la obra" />
                                    <span asp-validation-for="Ubicacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="form-group">


                                    <input asp-for="Empresa" class="form-control" placeholder="Empresa ejecutora" />
                                    <span asp-validation-for="Empresa" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <input asp-for="Telefono" class="form-control" placeholder="Telefono" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <input asp-for="Fax" class="form-control" placeholder="FAX" />
                                    <span asp-validation-for="Fax" class="text-danger"></span>
                                </div>
                            </div>


                        </div>



                        <div class="row clearfix">

                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-raised btn-round btn-primary">Actualizar</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>

<div>
    <a asp-action="obra_Lista">Cancelar</a>
</div>
